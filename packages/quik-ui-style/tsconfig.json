{
  "compilerOptions": {
    "outDir": "./lib/",
    "typeRoots": ["./node_modules/@types"],
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "isolatedModules": true,
    "moduleResolution": "bundler",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "module": "esnext",
    "target": "esnext",
    "jsx": "react-native"
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
